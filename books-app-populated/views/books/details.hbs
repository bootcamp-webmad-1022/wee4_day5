<div class="container">

    <h1>Detalles de {{title}}</h1>

    <div class="row">

        <div class="col-md-6">

            <hr>
            <p>{{description}}</p>
            <p>Puntuaci√≥n {{rating}}</p>
            <hr>
            <a href="/libros/editar/{{_id}}" class="btn btn-warning">Editar libro</a>

            <form action="/libros/eliminar/{{_id}}" method="POST" style="display: inline">
                <input type="submit" value="Eliminar libro" class="btn btn-danger">
            </form>

            <a href="/libros/listado" class="btn btn-dark">Volver al listado</a>
        </div>

        <div class="col-md-6">

            <hr>

            <p>Autores/as:</p>

            {{#each author}}
            <img src="{{pictureUrl}}" alt="{{name}} {{lastName}}" style="width: 100%">
            <p>{{name}} {{lastName}}</p>
            <hr>
            {{/each}}

        </div>
    </div>

</div>